usernames = []
if 'admin' in usernames:
	print('Hello Boss')
else:
	print('We need to find more users!')

current_users = ['lily', 'wangbadan', 'shabi', 'goubi', 'zazhong']
new_users = ['lilei', 'hanmeimei', 'shabi', 'goubi']

current_users = current_users.copy()
for new_user in new_users:
	if new_user in current_users:
		print("This user name is occupied!")
	else:
		print('You can use this username')


